@model PrzegladaraStrukturyDyskowej.Models.File

@{
    ViewData["Title"] = "Usuń plik";
}


<h3>Czy napewno chcesz usunąc plik?</h3>
<div>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastWriteTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastWriteTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.WeightByte)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WeightByte)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy</a>
    </form>
</div>
